    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telas.autenticacao.LogoutFragment"
    android:orientation="vertical"
    android:layout_marginTop="25dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSairConta"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:clickable="true"
        android:onClick="sairConta"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"
        app:contentPadding="15dp"
        android:layout_marginHorizontal="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_sair" />

                <TextView
                    android:id="@+id/sairconta"
                    style="@style/TextoBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sair_da_conta"
                    android:textAllCaps="true"
                    android:textColor="@color/corPrimaria" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


